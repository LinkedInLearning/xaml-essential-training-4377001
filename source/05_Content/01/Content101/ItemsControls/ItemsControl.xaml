<Window x:Class="Content101.Windows.ItemsControlExample"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:local="clr-namespace:Content101.Windows"
				mc:Ignorable="d"
				Title="ItemsControlExample"
				Height="450"
				Width="600"
				FontSize='22'>
	<StackPanel>
		<TextBlock Text='ListBox'
							 FontWeight='Bold' />
		<ListBox>
			<TextBlock Text='Barcelona' />
			<TextBlock Text='São Paulo' />
			<TextBlock Text='Vancouver' />
		</ListBox>

		<TextBlock Text='ComboBox'
							 FontWeight='Bold' />

		<ComboBox>
			<TextBlock Text='Barcelona' />
			<TextBlock Text='Paris' />
			<TextBlock Text='Vancouver' />
		</ComboBox>
		<TextBlock Text='ListBox with other UI'
							 FontWeight='Bold' />
		<ListBox>
			<StackPanel Orientation='Horizontal'>
				<Image Source="/Images/Monster-Group.png"
							 Height='90' />
				<TextBlock Text='Any content can be placed in the ToolTip'
									 FontSize='30'
									 VerticalAlignment='Center'
									 Margin='10,0,0,0'>

				</TextBlock>
			</StackPanel>
			<TextBlock Text='São Paulo' />
			<Ellipse Width='90'
							 Fill='Orange'
							 Height='40' />
		</ListBox>
	</StackPanel>
</Window>
