<Window x:Class="Content101.DockPanelExample"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				Title="DockPanelExample"
				Height="450"
				Width="800">
	<DockPanel LastChildFill='True'>
		<Rectangle Fill='#FFD44368'
							 Height='40'
							 Width='125'
							 DockPanel.Dock='Bottom' />
		<Rectangle Fill='BurlyWood'
							 Height='40'
							 Width='125' />
		<Image Source="/Images/Card-Monster-Yodel-Front.png"
					 Width='120'
					 DockPanel.Dock='Right' />
		<Image Source="/Images/Card-Monster-Yodel-Back.png"
					 DockPanel.Dock='Top' />

	</DockPanel>
</Window>
