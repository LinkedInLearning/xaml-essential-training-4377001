<Window x:Class="PropertyAttributes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="350"
        Width="400">
  <StackPanel>
    <TextBlock Text='Tailor-Made Tours'
               FontSize='36'
               ToolTip='Some Text'
               x:Name='TitleTextBlock'
               
                />
    <TextBox />
    <ListBox x:Name='TourListBox'>
      <ListBoxItem>Chicago</ListBoxItem>
      <ListBoxItem>Barcelona</ListBoxItem>
      <ListBoxItem>Singapore</ListBoxItem>

    </ListBox>
    <Button Content='Choose Tour' />
    <Button Content='Save Tour' />
    <Rectangle Width='40'
               Height='40'
               Fill='Orange'
               Margin='10' />
  </StackPanel>
</Window>
