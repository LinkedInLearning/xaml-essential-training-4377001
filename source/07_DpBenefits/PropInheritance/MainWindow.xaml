<Window x:Class="PropInheritance.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:local="clr-namespace:PropInheritance"
				mc:Ignorable="d"
				Title="MainWindow"
				Height="450"
				Width="800"
				FontSize='22'>
	<StackPanel>
		
		<TabControl x:Name='tabControl'
								Height='100'>
			<TabItem Header='Alien Cards'>
				<StackPanel Background='#FFE5E5E5'>
					<Button x:Name='StarButton'
									Content='With Star'
									Click='StarButton_Click' />
					<Button x:Name='button'
									Content='Button' />
					<CheckBox x:Name='checkBox'
										Content='CheckBox' />
					<RadioButton x:Name='radioButton'
											 Content='RadioButton' />
					<TextBlock x:Name='textBlock'
										 TextWrapping='Wrap'
										 Text='TextBlock' />
					<TextBox x:Name='textBox'
									 TextWrapping='Wrap'
									 Text='Example' />
				</StackPanel>
				
			</TabItem>
			<TabItem Header='Monster Cards'>
				<Grid Background='#FFE5E5E5' />
			</TabItem>
		</TabControl>
	</StackPanel>
</Window>
