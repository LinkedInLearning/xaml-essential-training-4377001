				<Ellipse />
				<Rectangle />
				<Ellipse />
				<Rectangle />
				<Ellipse />
				<Rectangle />
				<Ellipse />
				<Rectangle />
				<Ellipse />
				<Rectangle />
				<Ellipse />
				<Rectangle />
				<Ellipse />
				<Rectangle />
				<Ellipse />
				<Rectangle />
				<Ellipse />
				<Rectangle />
				<Ellipse />
				<Rectangle />
				<Ellipse />
				<Rectangle />
				<Ellipse />
				<Rectangle />
				<Ellipse />
				<Rectangle />
				<Ellipse />
				<Rectangle />
				<Ellipse />

			</UniformGrid >
		</Border>
	</StackPanel>

</Window>
