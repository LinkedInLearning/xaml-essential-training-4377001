<Window x:Class="WhereResource.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WhereResource"
        Title="MainWindow"
        FontSize='24'>
  <Window.Resources>
    <SolidColorBrush x:Key='MainBrush'
                     Color='Pink' />
    <SolidColorBrush x:Key='AccentBrush'
                     Color='LightSalmon' />

  </Window.Resources>
  <StackPanel>
    <Rectangle Width='200'
               Height='100'
               Fill='{StaticResource MainBrush}'>

    </Rectangle>

    <Ellipse Width='200'
             Height='100'
             Fill='{StaticResource AccentBrush}' />

  </StackPanel>
</Window>
