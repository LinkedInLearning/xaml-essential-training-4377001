<Window x:Class="CommonResources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonResources"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Window.Resources>
		<SolidColorBrush x:Key='MainBrush'
										 Color='Pink' />
		<SolidColorBrush x:Key='AccentBrush'
										 Color='LightSalmon' />

	</Window.Resources>
	<StackPanel>
		<Button Content='Show Styles Window'
						Click='StyleButton_Click'
						x:Name='StyleButton' />
		<Button Content='Show Color Window'
						Click='ColorButton_Click'
						x:Name='ColorButton' />
		<Button Content='Show Data Window'
						Click='DataButton_Click'
						x:Name='DataButton' />
	</StackPanel>
</Window>
