<Window x:Class="CommonResources.ColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonResources"
        mc:Ignorable="d"
        
        Title="ColorWindow"
        Height="300"
        Width="300">
  <Window.Resources>
    <Color x:Key="Brown">#FFC4AF8D</Color>
    <Color x:Key="RelaxedGreen">#FFAFC49D</Color>
    <SolidColorBrush x:Key='MainBrush'
                     Color='{StaticResource Brown}' />
    <SolidColorBrush x:Key='AccentBrush'
                     Color='{StaticResource RelaxedGreen}' />

  </Window.Resources>
  <StackPanel>
    <Rectangle Width='200'
               Height='100'
               Fill='{DynamicResource MainBrush}'>

    </Rectangle>

    <Ellipse Width='200'
             Height='100'
             Fill='{DynamicResource AccentBrush}' />
  </StackPanel>
</Window>
