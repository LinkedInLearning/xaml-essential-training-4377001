<Window x:Class="MarkupExtensions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarkupExtensions"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize='22'>
	<Window.Resources>
		<SolidColorBrush x:Key='MainBrush'
										 Color='Pink' />
		<SolidColorBrush x:Key='AccentBrush'
										 Color='LightSalmon' />

	</Window.Resources>
	<StackPanel>
		<Rectangle Width='200'
							 Height='100'
							 Fill='Gray'>

		</Rectangle>

		<Ellipse Width='200'
						 Height='100'
						 Fill='Gray' />
		
		
		<Button x:Name='ChangeResource'
						Content='Change Resource'
						Click='ChangeResource_Click' Margin='20' />

		<TextBlock x:Name='MessageTextBlock'
						Text=''
						
						Margin='20' />
	</StackPanel>
</Window>