<Window x:Class="UnderstandNamespaces.MainNamespace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Window.Resources>
    <DoubleAnimationUsingKeyFrames x:Key='moveAnimation' />
  </Window.Resources>
  <Grid>

    <TextBlock Text='Tailor-made Tours' />
    <TextBlock Text='{Binding TourName}' />
    <Button Content='Start'
            Width='200'
            Height='Auto'></Button>
    <Rectangle Height='2'
               Fill='Orange' />
    
  </Grid>
</Window>
