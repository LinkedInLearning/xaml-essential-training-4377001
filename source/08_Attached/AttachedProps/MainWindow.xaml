<Window x:Class="AttachedProps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttachedProps"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize='22'>
    <StackPanel>
		<Button x:Name='PolarPanelButton'
						Content='Polar Panel'
						Click='PolarPanelButton_Click' />
		<Button x:Name='KeyNavButton'
						Content='KeyNavigation'
						Click='KeyNavButton_Click' />
		<Button x:Name='TooltipButton'
						Content='ToolTip Services'
						Click='TooltipButton_Click' />
		<Button x:Name='GridButton'
						Content='Grid'
						Click='GridButton_Click' />

	</StackPanel>
</Window>
